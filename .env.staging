# Staging Environment Configuration
# Direct Inspection Feature

# Feature Flags
VITE_FEATURE_DIRECT_INSPECTION=true
VITE_ENABLE_STATUS_SYSTEM=true
VITE_ENABLE_INSPECTION_AUTOSAVE=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# API Configuration
VITE_API_URL=https://staging-api.roof-guardian.com
VITE_WEBSOCKET_URL=wss://staging-ws.roof-guardian.com

# Supabase Configuration
VITE_SUPABASE_URL=https://staging.supabase.roof-guardian.com
VITE_SUPABASE_ANON_KEY=your-staging-anon-key

# Monitoring
VITE_SENTRY_DSN=https://staging-sentry.roof-guardian.com
VITE_ANALYTICS_ID=staging-analytics

# Direct Inspection Settings
VITE_MAX_CONCURRENT_INSPECTIONS=5
VITE_INSPECTION_SESSION_TIMEOUT=3600000  # 1 hour
VITE_AUTOSAVE_INTERVAL=30000  # 30 seconds
VITE_STATUS_TRANSITION_VALIDATION=strict

# Performance Settings
VITE_ENABLE_LAZY_LOADING=true
VITE_CHUNK_SIZE_LIMIT=500  # KB
VITE_IMAGE_OPTIMIZATION=true

# Debug Settings (Staging Only)
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_SHOW_FEATURE_FLAGS=true