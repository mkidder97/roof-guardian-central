# Production Environment Configuration
# Direct Inspection Feature

# Feature Flags
VITE_FEATURE_DIRECT_INSPECTION=true
VITE_ENABLE_STATUS_SYSTEM=true
VITE_ENABLE_INSPECTION_AUTOSAVE=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# API Configuration
VITE_API_URL=https://api.roof-guardian.com
VITE_WEBSOCKET_URL=wss://ws.roof-guardian.com

# Supabase Configuration
VITE_SUPABASE_URL=https://prod.supabase.roof-guardian.com
VITE_SUPABASE_ANON_KEY=your-production-anon-key

# Monitoring
VITE_SENTRY_DSN=https://sentry.roof-guardian.com
VITE_ANALYTICS_ID=production-analytics
VITE_ERROR_REPORTING=true

# Direct Inspection Settings
VITE_MAX_CONCURRENT_INSPECTIONS=10
VITE_INSPECTION_SESSION_TIMEOUT=7200000  # 2 hours
VITE_AUTOSAVE_INTERVAL=60000  # 1 minute
VITE_STATUS_TRANSITION_VALIDATION=strict

# Performance Settings
VITE_ENABLE_LAZY_LOADING=true
VITE_CHUNK_SIZE_LIMIT=300  # KB
VITE_IMAGE_OPTIMIZATION=true
VITE_ENABLE_CDN=true
VITE_CDN_URL=https://cdn.roof-guardian.com

# Security Settings
VITE_ENABLE_CSP=true
VITE_SECURE_COOKIES=true
VITE_SESSION_TIMEOUT=3600000  # 1 hour

# Production Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error
VITE_SHOW_FEATURE_FLAGS=false